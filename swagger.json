{
  "openapi": "3.0.0",
  "info": {
    "title": "Serviço de agendamento de consultas",
    "description": "Essa API é responsável pelo agendamento de consultas",
    "version": "1.0.0"
  },
  "paths": {
    "/specialities": {
      "post": {
        "tags": ["Speciality"],
        "description": "cadastro de especialidades",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SpecilityRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SpecilityResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SpecilityRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Nome da especialidade"
          },
          "description": {
            "type": "string",
            "description": "Descrição da especialidade"
          }
        },
        "required": ["name", "description"]
      },
      "SpecilityResponse": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Nome da especialidade"
          },
          "description": {
            "type": "string",
            "description": "Descrição da especialidade"
          },
          "id": {
            "type": "string",
            "description": "Id da especialidade cadastrada",
            "format": "uuid"
          },
          "createdAt": {
            "type": "string",
            "description": "Data de criação da especialidade",
            "format": "date-time"
          }
        }
      }
    }
  }
}
